<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.5" method="upgrade">
    <name>COM_OSTOOLBAR</name>
    <creationDate>April 13 2015</creationDate>
    <author>OSTraining</author>
    <copyright>None</copyright>
    <authorEmail>support@ostraining.com</authorEmail>
    <authorUrl>ostraining.com</authorUrl>
    <version>1.6.0</version>

    <scriptfile>script.install.php</scriptfile>

    <files folder="site">
        <filename>controller.php</filename>
        <filename>ostoolbar.php</filename>
        <folder>models</folder>
        <folder>views</folder>
    </files>

    <media destination="com_ostoolbar" folder="media">
        <folder>css</folder>
        <folder>images</folder>
        <folder>js</folder>
    </media>

    <administration>
        <menu img="../media/com_ostoolbar/images/icon-16-tutorials.png">COM_OSTOOLBAR</menu>
        <files folder="admin">
            <filename>ostoolbar.php</filename>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <folder>library</folder>
            <folder>models</folder>
            <folder>views</folder>
            <folder>language</folder>
        </files>
    </administration>

    <alledia>
        <element>ostoolbar</element>
        <namespace>OSToolbar</namespace>
        <license>free</license>

        <relatedExtensions>
            <extension
                type="library"
                element="allediaframework">AllediaFramework
            </extension>

            <extension
                type="plugin"
                group="system"
                element="ossystem"
                publish="true"
                ordering="first">OSSystem
            </extension>
        </relatedExtensions>
    </alledia>

    <updateservers>
        <server
            type="extension"
            priority="1"
            name="OSToolbar Updates"><![CDATA[https://deploy.ostraining.com/client/update/free/stable/com_ostoolbar/extension.xml]]></server>
    </updateservers>
</extension>
