<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.5" method="upgrade">
    <name>COM_OSTOOLBAR</name>
    <author>Alledia</author>
    <creationDate>March 29, 2016</creationDate>
    <copyright>Copyright (C) 2015 Open Source Training, LLC</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>support@alledia.com</authorEmail>
    <authorUrl>https://www.alledia.com</authorUrl>
    <version>1.6.1</version>
    <description>COM_TOOLBAR_COMPONENT_DESCRIPTION</description>

    <scriptfile>script.install.php</scriptfile>

    <files folder="site">
        <filename>controller.php</filename>
        <filename>ostoolbar.php</filename>
        <folder>models</folder>
        <folder>views</folder>
    </files>

    <media destination="com_ostoolbar" folder="media">
        <folder>css</folder>
        <folder>images</folder>
        <folder>js</folder>
    </media>

    <administration>
        <menu img="../media/com_ostoolbar/images/icon-16-ostoolbar.png">COM_OSTOOLBAR</menu>
        <files folder="admin">
            <filename>ostoolbar.php</filename>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <folder>library</folder>
            <folder>models</folder>
            <folder>views</folder>
            <folder>language</folder>
        </files>
    </administration>

    <alledia>
        <element>ostoolbar</element>
        <namespace>OSToolbar</namespace>
        <license>free</license>
        <include>AllediaFreeDefaultFiles</include>

        <relatedExtensions>
            <extension
                type="library"
                element="allediaframework">AllediaFramework</extension>
        </relatedExtensions>
    </alledia>

    <updateservers>
        <server
            type="extension"
            priority="1"
            name="OSToolbar Updates"><![CDATA[https://deploy.ostraining.com/client/update/free/stable/com_ostoolbar/extension.xml]]></server>
    </updateservers>
